{
	"name": "marsender/symfony-assetmapper",
	"description": "Symfony assetmapper",
	"type": "project",
	"version": "1.0.0",
	"license": "GPL-3.0-or-later",
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": ">=8.2",
		"ext-ctype": "*",
		"ext-iconv": "*",
		"doctrine/dbal": "^4.3.2",
		"doctrine/doctrine-bundle": "^2.16.0",
		"doctrine/doctrine-migrations-bundle": "^3.4.2",
		"doctrine/orm": "^3.5.2",
		"phpdocumentor/reflection-docblock": "^5.3",
		"runtime/frankenphp-symfony": "^0.2.0",
		"symfony/asset": "7.3.*",
		"symfony/asset-mapper": "7.3.*",
		"symfony/console": "7.3.*",
		"symfony/doctrine-messenger": "7.3.*",
		"symfony/dotenv": "7.3.*",
		"symfony/expression-language": "7.3.*",
		"symfony/flex": "^2.5.0",
		"symfony/form": "^7.3.0",
		"symfony/framework-bundle": "^7.3.0",
		"symfony/http-client": "^7.3.0",
		"symfony/intl": "7.3.*",
		"symfony/mailer": "7.3.*",
		"symfony/mime": "^7.3.0",
		"symfony/monolog-bundle": "^3.0",
		"symfony/notifier": "7.3.*",
		"symfony/process": "^7.3.0",
		"symfony/property-access": "7.3.*",
		"symfony/property-info": "7.3.*",
		"symfony/runtime": "7.3.*",
		"symfony/security-bundle": "7.3.*",
		"symfony/serializer": "^7.3.0",
		"symfony/stimulus-bundle": "^2.23.0",
		"symfony/string": "7.3.*",
		"symfony/translation": "^7.3.0",
		"symfony/twig-bundle": "7.3.*",
		"symfony/ux-turbo": "^2.23.0",
		"symfony/validator": "^7.3.0",
		"symfony/web-link": "7.3.*",
		"symfony/yaml": "7.3.*",
		"symfonycasts/sass-bundle": "^0.8.2",
		"symfonycasts/tailwind-bundle": "^0.7.1",
		"twig/extra-bundle": "^3.20.0",
		"twig/twig": "^3.20.0"
	},
	"config": {
		"allow-plugins": {
			"php-http/discovery": true,
			"symfony/flex": true,
			"symfony/runtime": true
		},
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"replace": {
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php72": "*",
		"symfony/polyfill-php73": "*",
		"symfony/polyfill-php74": "*",
		"symfony/polyfill-php80": "*",
		"symfony/polyfill-php81": "*",
		"symfony/polyfill-php82": "*"
	},
	"scripts": {
		"auto-scripts": {
			"cache:clear": "symfony-cmd",
			"assets:install %PUBLIC_DIR%": "symfony-cmd",
			"importmap:install": "symfony-cmd"
		},
		"post-install-cmd": [
			"@auto-scripts"
		],
		"post-update-cmd": [
			"@auto-scripts"
		],
		"deploy": [
			"composer cache-clear; bin/console tailwind:build --minify; bin/console sass:build; rm -rf public/assets; bin/console asset-map:compile"
		],
		"cache-clear": [
			"sudo -u www-data bin/console cache:clear"
		],
		"php-cs-fixer": [
			"vendor/bin/php-cs-fixer fix --allow-risky=yes --using-cache=no --config .php-cs-fixer.php src tests"
		],
		"twig-cs-fixer": [
			"vendor/bin/twig-cs-fixer lint --fix templates"
		],
		"phpstan": [
			"vendor/bin/phpstan analyse"
		],
		"fix": [
			"composer php-cs-fixer && composer twig-cs-fixer"
		]
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"extra": {
		"symfony": {
			"allow-contrib": true,
			"require": "7.3.*",
			"docker": true
		}
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.85.1",
		"phpstan/phpdoc-parser": "^2.1",
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^12.0",
		"symfony/browser-kit": "^7.3.0",
		"symfony/css-selector": "7.3.*",
		"symfony/debug-bundle": "7.3.*",
		"symfony/maker-bundle": "^1.62.1",
		"symfony/phpunit-bridge": "7.3.*",
		"symfony/stopwatch": "^7.3.0",
		"symfony/web-profiler-bundle": "^7.3.0",
		"vincentlanglet/twig-cs-fixer": "^3.5.1"
	}
}
