{% extends 'base.html.twig' %}

{% block body_id 'toast' %}

{% block title %}
	Test toast
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-4 text-2xl font-semibold">Test toast</h1>
		<div class="page-content mt-2">
			<ul>
				{% for type in types %}
					{% if type == 'success' %}
						{% set class = 'is-success' %}
					{% elseif type == 'info' %}
						{% set class = 'is-info' %}
					{% else %}
						{% set class = 'is-danger' %}
					{% endif %}
					<li>
						<button data-controller="test" data-action="click->test#executeShowToast" data-test-toast-type-value="{{ type }}" data-test-toast-message-value="Toast message for type {{ type }}" data-test-toast-delay-value="10000" class="mb-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
							Test toast
							{{ type }}
						</button>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}
